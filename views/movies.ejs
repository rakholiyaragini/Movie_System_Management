<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <!-- Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <h1 class="my-4">Movies</h1>
        <a href="/movies/add" class="btn btn-primary mb-3">Add New Movie</a>
        <div class="row">
            <% movies.forEach(movie=> { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="/uploads/<%= movie.poster %>" alt="<%= movie.title %>" />
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= movie.title %>
                            </h5>
                            <p class="card-text">
                                <%= movie.description %>
                            </p>
                            <a href="/movies/edit/<%= movie._id %>" class="btn btn-warning">Edit</a>
                            <a href="/movies/delete/<%= movie._id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <!-- Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>